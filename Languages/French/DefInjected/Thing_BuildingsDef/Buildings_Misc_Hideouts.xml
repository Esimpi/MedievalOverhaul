<?xml version="1.0" encoding="UTF-8"?>
<Defs>

    <ThingDef ParentName="BenchBase">
        <defName>DankPyon_QuestFinder</defName>
        <label>explorer's workbench</label>
		<thingClass>MedievalOverhaul.Building_QuestScanner</thingClass>
        <description>The Explorer's Workbench is a sturdy, timeworn table covered in an array of tools, maps, and magnifying glasses. This indispensable station is where adventurers bring their Torn Notes, meticulously piecing together the fragmented clues. By examining and arranging the tattered scraps of parchment, the workbench reveals hidden locations, secret hideouts, and points of interest. \n\nTo uncover more advanced hideouts, the workbench must be linked to specialized buildings such as the Explorerâ€™s Archive, Ancient Lectern, and the Ancient Orb, enhancing its capabilities and enabling the discovery of deeper secrets. Here, the path to grand adventures begins, where mysteries are unraveled and new quests are set in motion.</description>
        <descriptionHyperlinks>
			<ThingDef>DankPyon_CultBook</ThingDef>
			<ThingDef>DankPyon_BirdPost</ThingDef>
			<ThingDef>DankPyon_CultShelf</ThingDef>
			<ThingDef>DankPyon_CultPedestal</ThingDef>
			<ThingDef>DankPyon_CultOrb</ThingDef>
		</descriptionHyperlinks>
		<size>(3,3)</size>
		<minifiedDef />
		<thingCategories Inherit="false" />
        <graphicData>
            <texPath>Furniture/TressureHuntersWorkbench/TressureHuntersWorkbench</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <shaderType>CutoutComplex</shaderType>
			<drawRotated>false</drawRotated>
            <drawSize>(5,5)</drawSize>
            <damageData>
                <cornerTL>Damage/Corner</cornerTL>
                <cornerTR>Damage/Corner</cornerTR>
                <cornerBL>Damage/Corner</cornerBL>
                <cornerBR>Damage/Corner</cornerBR>
            </damageData>
        </graphicData>
        <stuffCategories>
            <li>Stony</li>
        </stuffCategories>
        <costStuffCount>150</costStuffCount>
        <costList>
            <DankPyon_TornNote_Hideout>1</DankPyon_TornNote_Hideout>
        </costList>
        <castEdgeShadows>true</castEdgeShadows>
        <staticSunShadowHeight>0.20</staticSunShadowHeight>
        <altitudeLayer>Building</altitudeLayer>
        <passability>PassThroughOnly</passability>
        <pathCost>50</pathCost>

        <statBases>
            <MaxHitPoints>250</MaxHitPoints>
            <WorkToBuild>2800</WorkToBuild>
            <Flammability>1.0</Flammability>
            <ResearchSpeedFactor>1</ResearchSpeedFactor>
        </statBases>
        <fillPercent>0.5</fillPercent>
        <interactionCellOffset>(0,0,-2)</interactionCellOffset>
        <hasInteractionCell>true</hasInteractionCell>
        <surfaceType>Item</surfaceType>
        <techLevel>Medieval</techLevel>
        <comps>
            <li Class="CompProperties_Refuelable">
                <fuelConsumptionRate>1</fuelConsumptionRate>
                <fuelCapacity>5</fuelCapacity>
                <fuelFilter>
                    <thingDefs>
                        <li>DankPyon_TornNote_Hideout</li>
                    </thingDefs>
                </fuelFilter>
                <consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
                <showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
            </li>
            <li Class="MedievalOverhaul.CompProperties_QuestFinder">
                <scanSpeedStat>ResearchSpeed</scanSpeedStat>
                <soundWorking>ScannerLongRangeMineral_Ambience</soundWorking>
            </li>
            <li Class="CompProperties_AffectedByFacilities">
                <linkableFacilities>
					<li>DankPyon_BirdPost</li>
					<li>DankPyon_CultShelf</li>
					<li>DankPyon_CultPedestal</li>
					<li>DankPyon_CultOrb</li>
                </linkableFacilities>
            </li>
            <li Class="CompProperties_Forbiddable"/>
        </comps>
        <placeWorkers>
            <li>PlaceWorker_PreventInteractionSpotOverlap</li>
            <li>PlaceWorker_ShowFacilitiesConnections</li>
        </placeWorkers>
        <researchPrerequisites>
            <li>DankPyon_Exploration</li>
        </researchPrerequisites>
		<designationCategory>Misc</designationCategory>
    </ThingDef>

    <!-- ========== Linkables ========== -->
	
	<!-- BookBase -->
