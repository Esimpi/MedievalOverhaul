<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Banner Base -->
	<ThingDef ParentName="FurnitureWithQualityBase" Name="DankPyon_BannerBase" Abstract="True">
		<description>A decorated linen banner to display the colony's colors.</description>
		<designationCategory>DankPyon_RusticDecoration</designationCategory>

		<passability>PassThroughOnly</passability>
		<fillPercent>0.25</fillPercent>
		<pathCost>0</pathCost>
		<statBases>
            <MaxHitPoints>100</MaxHitPoints>
            <WorkToBuild>750</WorkToBuild>
            <Mass>10</Mass>
            <Flammability>1.0</Flammability>
            <Beauty>20</Beauty>
		</statBases>

		<stuffCategories>
		<li>Metallic</li>
		<li>Woody</li>
		<li>Stony</li>
		</stuffCategories>
		<costStuffCount>20</costStuffCount>
		<costList>
		    <DankPyon_Linen>40</DankPyon_Linen>
		</costList>

		<holdsRoof>false</holdsRoof>
		<canOverlapZones>false</canOverlapZones>
		<fertility>0</fertility>

		<graphicData>
            <drawSize>(3,3)</drawSize>
            <drawOffset>(0,0,0.4)</drawOffset>
            <graphicClass>Graphic_Multi</graphicClass>
            <shaderType>CutoutComplex</shaderType>
            <shadowData>
                <volume>(0.3, 0.5, 0.3)</volume>
                <offset>(0,0,-0.23)</offset>
            </shadowData>
            <damageData>
                <rect>(0.2,0.2,0.6,0.6)</rect>
            </damageData>
		</graphicData>
		<uiIconScale>0.5</uiIconScale>
        <rotatable>true</rotatable>
        <altitudeLayer>BuildingOnTop</altitudeLayer>
		
	</ThingDef>

	<ThingDef ParentName="DankPyon_BannerBase" Name="DankPyon_NonBuildableBanners" Abstract="True">
